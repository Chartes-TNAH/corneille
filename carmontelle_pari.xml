        <castItem><role xml:id="MONSIEURDUVAL" rend="junior" id="MONSIEUR-DUVAL" sex="1" type="H" statut="bourgeois" age="J" stat_amour="néant">MONSIEUR DUVAL</role>, jeune homme.</castItem>
        <castItem><role xml:id="MONSIEURDELALANDE" rend="junior" id="MONSIEUR-DELALANDE" sex="1" type="H" statut="bourgeois" age="J" stat_amour="néant">MONSIEUR DELALANDE</role>, jeune homme.</castItem>
        <castItem><role xml:id="MONSIEURDESPRES" rend="junior" id="MONSIEUR-DESPRÉS" sex="1" type="H" statut="bourgeois" age="J" stat_amour="néant">MONSIEUR DESPRÉS</role>, jeune homme.</castItem>
        <castItem><role xml:id="MONSIEURLEDOUX" id="MONSIEUR-LEDOUX" sex="1" type="H" statut="bourgeois" age="A" stat_amour="néant">MONSIEUR LEDOUX</role>, manchot.</castItem>
