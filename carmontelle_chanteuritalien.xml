        <castItem><role xml:id="MADEMOISELLEDESAINTHYGIN" rend="junior" id="MADEMOISELLE DE SAINT HYGIN" sex="2" type="H" statut="aristocrate" age="J" stat_amour="néant">MADEMOISELLE DE SAINT HYGIN</role>, fille de Monsieur de Saint Hygin.</castItem>
        <castItem><role xml:id="MONSIEURDELAMARRE" id="MONSIEUR DELAMARRE" sex="1" type="H" statut="bourgeois" age="A" stat_amour="néant">MONSIEUR DELAMARRE</role>.</castItem>
        <castItem><role xml:id="MONSIEUROCTAVINI" id="MONSIEUR OCTAVINI" sex="1" type="H" statut="musicien" age="A" stat_amour="néant">MONSIEUR OCTAVINI</role>, musicien italien.</castItem>
